'use babel'
// @flow
import type {DevTool} from '../../../ExecutionControlEpic/DevToolsSummaryFeature/Types/types.js.flow';

export type PackageTester = RegExp | string | (file: string, directory: ?Directory) => (boolean | Package) | false;

export type Plugin = {
  tool: DevTool,
  isPackage?: PackageTester,
};

export type Directory = {
  name: string,
  files: Array<string | Directory>
}

export type PackageInfos = {
  name: string,
  path: string,
  type: "file" | "directory",
}

export type Package = PackageInfos & {
  plugin: Plugin,
};
